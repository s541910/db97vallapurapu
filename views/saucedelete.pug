  extends layout

  block content
    h1= title

    if (toShow == null)
      h2 No instance to delete
    else
      - let sauceid = toShow._id
      - let saucecompany = toShow.company
      - let saucepackage = toShow.package
      - let sauceprize = toShow.prize
      - let actionid = "/resource/sauces/" + sauceid
      script let actionid = "#{actionid}"
      div
        div.row
          div(class='sauceAttr mr-3') Sauce ID is:
          div #{sauceid}
        div.row
          div(class='sauceAttr mr-3') Sauce comapny is:
          div #{saucecompany}
        div.row
          div(class='sauceAttr mr-3') Sauce Package is:
          div #{saucepackage}
        div.row
          div(class='costumeAttr mr-3') Sauce Prize is:
          div #{sauceprize}

      button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

    script.
      function cancel() {
        // Go back to the home page for the costume collection
        window.location.href='/costumes'
      }
    script.
      function deleteOnid() {
        console.log("starting delete")
        // delete first
        fetch(actionid, {
          method: 'DELETE'      // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeded")
          window.location.href='/sauces'
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error )
        });
      }
